{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "webpack-env",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./asset/app/types"
    ],
    "resolveJsonModule": true,
    "paths": {
      "~/*": [
        "asset/*"
      ]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "asset/app/**/*"
  ]
}
